{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "baseUrl": "./",
  },
  "ts-node": {
    "transpileOnly": true,
  },
  "include": [
    "./lib/**/*",
    "./bin/**/*",
    "./translations/**/*",
    "./server"
  ],
}